# .ansible-lint checks our Ansible playbooks, roles, and tasks for common errors and style issues

# Ignore specific rules if needed (optional)
skip_list = 
    206,  # Using command instead of module (allow in some cases)
    305   # Tasks with too many arguments (can happen in complex tasks)

# Set paths to lint (optional)
# lint_paths = playbooks/ roles/

# Set verbosity level
verbosity = 1
